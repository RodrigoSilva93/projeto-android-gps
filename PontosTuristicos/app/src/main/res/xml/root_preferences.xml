<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/maps_header">

        <ListPreference
            app:defaultValue="Híbrido"
            app:entries="@array/tipo"
            app:entryValues="@array/tipo"
            app:key="tipo"
            app:title="@string/tipo_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="Médio"
            app:entries="@array/zoom"
            app:entryValues="@array/zoom"
            app:key="zoom"
            app:title="@string/zoom_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>